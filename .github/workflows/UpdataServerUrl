name: Update Nexon Server URL (GL)

on:
  schedule:
    - cron: "0 * * * *"  # 每小时运行一次
  workflow_dispatch:  # 允许手动触发
permissions:
  contents: write  # 允许写入仓库内容

jobs:
  update:
    runs-on: ubuntu-latest  # 使用最新的 Ubuntu 环境

    steps:
      - name: Checkout Repository  # 检出仓库
        uses: actions/checkout@v4
        with:
          submodules: false

      - name: Set up Python 3.x  # 设置 Python 环境
        uses: actions/setup-python@v5
        with:
          python-version: '3.x'

      - name: Install dependencies from requirements.txt  # 安装依赖
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Run update_urls_gl.py with ba_gl.env  # 运行更新脚本
        run: |
          python update_urls_gl.py ba_gl.env server-info_gl.json

      - name: Check if ba_gl.env was modified  # 检查 ba_gl.env 是否有修改
        run: |
          git config --global user.name "GitHub Actions"
          git config --global user.email "actions@github.com"
          git add ba_gl.env
          if git diff --cached --quiet; then
            echo "没有检测到更新，跳过提交"
            echo "update_detected=false" >> $GITHUB_ENV
          else
            echo "检测到悠星服务器URL更新，正在更新ba_gl.env网址..."
            echo "update_detected=true" >> $GITHUB_ENV
          fi

      - name: Push updated server info JSON to current repository  # 提交更新的 JSON 文件
        if: env.update_detected == 'true'
        run: |
          git add server-info_gl.json
          git commit -m "更新悠星服务器URL (GL)"
          git push origin HEAD

      - name: Trigger Deploy Workflow  # 触发部署工作流
        if: env.update_detected == 'true'
        run: |
          curl -X POST \
            -H "Accept: application/vnd.github+json" \
            -H "Authorization: token ${{ secrets.GITHUB_TOKEN }}" \
            -H "X-GitHub-Api-Version: 2022-11-28" \
            https://api.github.com/repos/${{ github.repository }}/dispatches \
            -d '{"event_type": "run-deployment"}'
